<%= form_tag('/filter_movies') do %>
  <%= select_tag :category, options_from_collection_for_select(Category.all, 'id', 'title') %>
  <%= submit_tag "Filter" %>
<% end %>

<ul>
  <% @movies.each do |movie| %>
    <li><%= link_to movie.title, movie %> <%= link_to "Edit movie", edit_movie_path(movie) %></li>
  <% end %>
</ul>

<%= link_to "New movie", new_movie_path %>